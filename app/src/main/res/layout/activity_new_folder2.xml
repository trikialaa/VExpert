<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewFolder2Activity" android:background="@drawable/bg">

    <ImageView
            android:layout_width="326dp"
            android:layout_height="129dp" app:srcCompat="@drawable/logovexpert"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.494" android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="84dp" app:srcCompat="@drawable/starlogo"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:src="@drawable/recarrondigris"
            android:layout_width="354dp"
            android:layout_height="458dp"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView6"
            android:background="@drawable/buttonbg" app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintVertical_bias="0.666"/>
    <Button
            android:text="valider les photos"
            android:layout_width="284dp"
            android:layout_height="58dp"
            android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.495" style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/buttonbg" android:textColor="@android:color/background_light"
            android:textSize="18sp" android:textStyle="bold" android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="304dp" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="15dp" app:srcCompat="@drawable/bout2"
            android:id="@+id/imageView7" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="AJOUTER LES PHOTOS DU SINISTRE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="18sp" android:textStyle="bold"/>


</android.support.constraint.ConstraintLayout>