<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity" android:background="@drawable/bg">

    <ImageView
            android:layout_width="326dp"
            android:layout_height="129dp" app:srcCompat="@drawable/logovexpert"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.494"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="84dp" app:srcCompat="@drawable/starlogo"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:src="@drawable/recarrondigris"
            android:layout_width="354dp"
            android:layout_height="458dp"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView6"/>
    <Button
            android:text="Ajouter un nouveau dossier"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.495" style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            android:textSize="16sp" android:textStyle="bold" android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="Compléter un dossier existant"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.495" style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            android:textSize="16sp" android:textStyle="bold" android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/button"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/users"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="ALAA TRIKI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="36sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textStyle="bold"/>
    <TextView
            android:text="Dernière connexion : 02/04/2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="20sp"/>

</android.support.constraint.ConstraintLayout>