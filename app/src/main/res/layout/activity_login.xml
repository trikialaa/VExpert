<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@drawable/bg">

    <ImageView
            android:layout_width="326dp"
            android:layout_height="129dp" app:srcCompat="@drawable/logovexpert"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.494"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="84dp" app:srcCompat="@drawable/starlogo"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:src="@drawable/recarrondigris"
            android:layout_width="354dp"
            android:layout_height="458dp"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView6"/>
    <EditText
            android:layout_width="274dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.495"
            android:hint="Identifiant" android:background="@android:color/background_light" android:paddingLeft="20dp"/>
    <EditText
            android:layout_width="274dp"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Mot de passe" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/username" android:background="@android:color/white"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="S'authentifier"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.495" style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            android:textSize="18sp" android:textStyle="bold" android:fontFamily="sans-serif-smallcaps"/>

</android.support.constraint.ConstraintLayout>