    <Button
            android:layout_width="300dp"
            android:layout_height="186dp"
            android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.494" android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/recarrondiblanc"
            android:foregroundGravity="center" android:text="Cliquez ici pour scanner\nl'attestation d'assurance"
            android:textSize="20dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4"/>

