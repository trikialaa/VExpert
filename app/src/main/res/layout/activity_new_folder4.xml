<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewFolder4Activity" android:background="@drawable/bg">

    <ImageView
            android:layout_width="233dp"
            android:layout_height="75dp" app:srcCompat="@drawable/logovexpert"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.494" android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="102dp"
            android:layout_height="49dp" app:srcCompat="@drawable/starlogo"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:src="@drawable/rounded_gray_rect"
            android:layout_width="0dp"
            android:layout_height="458dp"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            android:layout_marginTop="4dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    <Button
            android:text="valider l'ajout du dossier"
            android:layout_width="284dp"
            android:layout_height="58dp"
            android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.495" style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/buttonbg" android:textColor="@android:color/background_light"
            android:textSize="18sp" android:textStyle="bold" android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/signature_pad"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="15dp" app:srcCompat="@drawable/bout4"
            android:id="@+id/imageView7" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="VEUILLEZ SIGNER ICI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/black"/>

    <com.github.gcacace.signaturepad.views.SignaturePad
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signature_pad"
            android:layout_width="300dp"
            android:layout_height="246dp"
            app:penColor="@android:color/black"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.494"
            android:background="@android:color/background_light"/>

</android.support.constraint.ConstraintLayout>